<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.views">
      <category
            name="Code Search"
            id="SearchCode">
      </category>
      <view
            allowMultiple="false"
            name="Web View"
            icon="icons/sample.gif"
            category="SearchCode"
            class="searchcode.views.WebView"
            id="searchcode.views.WebView">
      </view>
      <view
            allowMultiple="false"
            name="Repository View"
            icon="icons/sample.gif"
            category="SearchCode"
            class="searchcode.views.RepositoryView"
            id="searchcode.views.RepositoryView">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.jdt.ui.JavaPerspective">
         <view
               ratio="0.5"
               relative="org.eclipse.ui.views.ProblemView"
               relationship="right"
               id="searchcode.views.SearchCodeView">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.help.contexts">
      <contexts
            file="contexts.xml">
      </contexts>
   </extension>
<extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            id="PopMenu.contribution1"
            objectClass="org.eclipse.ui.IEditorInput">
         <menu
               id="PopMenu.menu1"
               label="Search CodeSnippets"
               path="additions">
            <separator
                  name="group1">
            </separator>
         </menu>
         <action
               class="searchcode.views.SearchWebMenu"
               enablesFor="1"
               id="PopMenu.newAction"
               label="Search Web"
               menubarPath="PopMenu.menu1/group1">
         </action>
         <action
               class="searchcode.views.SearchDBMenu"
               enablesFor="1"
               id="PopMenu.newAction"
               label="Search Repository"
               menubarPath="PopMenu.menu1/group1">
         </action>
      </objectContribution>
   </extension>

</plugin>
